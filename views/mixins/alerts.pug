mixin error(title, message)
    div(id="error" role="alert" class="absolute bottom-4 left-4 rounded-xl border border-gray-100 dark:border-slate-700 bg-white dark:bg-slate-900 p-4 ml-16" )
        div( class="flex items-start gap-4" )
            span( class="text-red-600" )
                svg(
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6"
                    )
                    path(
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        )
            div( class="flex-1" )
                strong( class="block font-medium text-gray-200") #{title}
                p( class="mt-1 text-sm text-gray-400") #{message}
            button( class="text-gray-500 transition hover:text-gray-600" )
                span( class="sr-only") Dismiss popup
                svg(
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-6 w-6"
                    )
                    path( stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12")
